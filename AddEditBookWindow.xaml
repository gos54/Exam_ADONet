<Window x:Class="WpfApp7.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="AddEditBookWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Width="250" Content="Названике" FontSize="10"/>
            <TextBox x:Name="TitleTextBox" Width="250" Margin="5"/>
            <Label Width="250" Content="Автор" FontSize="10"/>
            <TextBox x:Name="AuthorTextBox" Width="250" Margin="5"/>
            <Label Width="250" Content="Издатель" FontSize="10"/>
            <TextBox x:Name="PublisherTextBox" Width="250" Margin="5"/>
            <Label Width="250" Content="Количество страниц" FontSize="10"/>
            <TextBox x:Name="PagesTextBox" Width="250" Margin="5"/>
            <Label Width="250" Content="Жанр" FontSize="10"/>
            <TextBox x:Name="GenreTextBox" Width="250" Margin="5"/>
            <Label Width="250" Content="Год публикации" FontSize="10"/>
            <TextBox x:Name="YearPublishedTextBox" Width="250" Margin="5"/>
            <Label Width="250" Content="Цена продажи" FontSize="10"/>
            <TextBox x:Name="SellingPriceTextBox" Width="250" Margin="5"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
